{
    "extends": "tslint:recommended",
    "rulesDirectory": ["src"],
    "rules": {
        "max-line-length": {
            "options": [120]
        },
        "new-parens": true,
        "no-arg": true,
        "no-bitwise": true,
        "no-conditional-assignment": true,
        "no-consecutive-blank-lines": false,
        "no-console": false,
        "object-literal-sort-keys": false,
        "no-require-imports": false,
        "no-var-requires": false,
        "variable-name": [
            true,
            "allow-snake-case"
        ]
    },
    "jsRules": {
        "max-line-length": {
            "options": [120]
        }
    }
}